@page
@model BookLoisRazor.Pages.BookList.IndexModel

<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-2">
        <a asp-page="Create" class="btn btn-info form-control">Create New Book</a>
    </div>
    <div class="col-2">
        <a asp-page="Upsert" class="btn btn-info form-control">Add(Upsert) New Book</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Books.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Books.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().Author"></label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().ISBN"></label>
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var iteam in Model.Books)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => iteam.Name)
                            </td>

                            <td>
                                @Html.DisplayFor(m => iteam.Author)
                            </td>
                            <td>
                                @Html.DisplayFor(m => iteam.ISBN)
                            </td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@iteam.Id" onclick="return confirm('Are your sure you Want to Delete?')" class="btn btn-danger btn-sm ">Delete</button>
                                <a asp-page="Edit" asp-route-id="@iteam.Id" class="btn btn-success btn-sm">Edit</a>
                            </td>
                        </tr>
                    }

                </table>
            }
            else
            {
                <p>No Books Available</p>
            }

        </form>

    </div>
    <div class="col-12 border p-3">

        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th> Author</th>
                    <th> ISBN</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts{
    <script src="~/js/bookList.js"></script>
}
